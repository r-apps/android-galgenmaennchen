<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        android:orientation="vertical"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="de.rubeen.apps.android.galgenmaennchen.MainActivity">

    <TextView android:layout_width="match_parent" android:layout_height="wrap_content" style="@style/TextAppearance.AppCompat.Headline" android:text="@string/txt_AppName"
    android:padding="20dp"/>
    <Button
            android:padding="5dp"
            android:text="@string/btn_play_game"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/btn_playGame"/>
    <Button android:padding="5dp"
            android:text="@string/btn_multiplayer"
            android:layout_width="match_parent" android:layout_height="wrap_content" android:id="@+id/btn_playGameMultiPlayer"/>
</LinearLayout>
