<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="de.rubeen.apps.android.galgenmaennchen.GameActivity">

    <RelativeLayout
            android:id="@+id/gridViewProgress"
            android:gravity="top"
            android:layout_width="match_parent"
            android:layout_height="200dp" android:background="@color/colorAccent">
        <ImageView android:layout_centerInParent="true"
                   android:layout_width="200dp" android:layout_height="match_parent"
                   android:id="@+id/galgenImageView"/>
    </RelativeLayout>
    <TextView
            android:layout_centerInParent="true"
            android:text="TextView"
            style="@style/TextAppearance.AppCompat.Large"
            android:textSize="20pt"
            android:layout_height="20pt"
            android:textAlignment="center"
            android:layout_width="match_parent"
            android:autoSizeTextType="uniform"
            android:id="@+id/textViewGuessed" android:letterSpacing="0.25" android:fontFamily="monospace"/>
    <Space
            android:layout_width="match_parent"
            android:layout_height="20dp"/>
    <include layout="@layout/part_speller" />
</RelativeLayout>
